#kivy: 1.9.0
#: import Board board


<GameScreen>:

    board: board
    button: button

    BoxLayout:

    Board:
        canvas.before:
            Color:
                rgba: (.5, .5, 1, 1)
            Rectangle:
                size: self.size
                pos: self.pos

        id: board
        size_hint: (None, None)
        size: (root.width, root.width)
        center_y: root.center_y

    BoxLayout:

        size_hint_y: .165
        pos_hint: {'top': self.size_hint_y}

        Button:
            id: button
            text: 'Start'
            on_press: root.on_start_button_pressed()
