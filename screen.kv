#kivy: 1.9.0
#: import Board board


<GameScreen>:

    board: board

    Board:
        canvas.before:
            Color:
                rgba: (.5, .5, 1, 1)
            Rectangle:
                size: self.size
                pos: self.pos

        id: board
        size_hint: (None, None)
        size: (root.width, root.width)
        center_y: root.center_y