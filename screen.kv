#kivy: 1.9.0
#: import Board board


<GameScreen>:

    board: board
    score: score
    button: button

    BoxLayout:
        size_hint_y: .165
        pos_hint: {'top': 1}

        Label:
            text: 'Score:'
            font_size: '32sp'
            halign: 'left'

        Label:
            id: score
            text: '0'
            font_size: '32sp'
            halign: 'right'

    Board:
        canvas.before:
            Color:
                rgba: (.8, .8, .8, 1)
            Rectangle:
                size: self.size
                pos: self.pos

        id: board
        size_hint: (None, None)
        size: (root.width, root.width)
        center_y: root.center_y

    BoxLayout:
        size_hint: .6, .1
        pos_hint: {'top': .125, 'center_x': .5}

        Button:
            id: button
            text: 'Start'
            font_size: '26sp'
            on_press: root.on_start_button_pressed()